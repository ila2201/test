<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fon">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/fon"
        >
        <TextView
            android:id="@+id/glav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИТЕ РЕЖИМ:"
            android:textSize="40dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="СЛОЖЕНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="1-10"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="10-100"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="100-1000"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />


        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="350dp"
            android:height="80dp"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:text="ВЫЧИТАНИЕ"
            android:textColor="@color/black"
            android:backgroundTint="@color/knopi"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="1-10"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/mn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="10-100"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="350dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="100-1000"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                     "
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                     "/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                     "/>

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:text="НАЗАД"
            android:backgroundTint="@color/exit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            />


    </LinearLayout> </RelativeLayout>