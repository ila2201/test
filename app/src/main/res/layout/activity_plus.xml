<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fonplay">
    <TextView
        android:id="@+id/glav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сложение"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="top"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/fonplay"
        >
        <TextView
            android:id="@+id/glav1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Реши пример:"
            android:textSize="40dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/prim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textColor="@color/textp"
            android:textStyle="bold"
            android:singleLine="true"
            android:gravity="top"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="300dp"
            android:height="40dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="СЛОЖЕНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="300dp"
            android:height="40dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="СЛОЖЕНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="300dp"
            android:height="40dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="СЛОЖЕНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="300dp"
            android:height="40dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="СЛОЖЕНИЕ"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="300dp"
            android:height="80dp"
            android:backgroundTint="@color/knopi"
            android:onClick="onClick"
            android:text="Заново"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>


</RelativeLayout>